{
  "default_stop_words": [
    "defmodule",
    "defrecord",
    "defimpl",
    "def.+(.+\/\/.+).+do"
  ],
  "skip_files": [
    "test",
    "priv",
    "lib/bank/release.ex",
    "lib/bank/financial/operation.ex",
    "lib/bank/notifications/email.ex",
    "lib/bank/notifications/mailer.ex",
    "lib/bank/application.ex",
    "lib/bank_web.ex",
    "lib/bank_web/gettext.ex",
    "lib/bank_web/views/error_helpers.ex"
  ],
  "coverage_options": {
    "treat_no_relevant_lines_as_covered": true,
    "output_dir": "cover/",
    "minimum_coverage": 90
  }
}
